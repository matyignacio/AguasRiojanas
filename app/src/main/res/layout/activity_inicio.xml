<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_primary"
    tools:context=".Inicio">

    <Button
        android:id="@+id/bUnidadesFacturacion"
        style="@style/b_primary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/ic_unidad_white_24dp"
        android:drawableLeft="@drawable/ic_unidad_white_24dp"
        android:text="Unidad Facturacion" />

    <Button
        android:id="@+id/bEstadoCuenta"
        style="@style/b_primary"
        android:layout_below="@id/bUnidadesFacturacion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/ic_settings_white_24dp"
        android:drawableLeft="@drawable/ic_settings_white_24dp"
        android:text="Estado de Cuenta" />

    <Button
        android:id="@+id/bAsistenciaTecnica"
        style="@style/b_primary"
        android:layout_below="@id/bEstadoCuenta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/ic_contact_phone_white_24dp"
        android:drawableLeft="@drawable/ic_contact_phone_white_24dp"
        android:text="Asistencia Tecnica" />

    <Button
        android:id="@+id/bNotificaciones"
        style="@style/b_primary"
        android:layout_below="@id/bAsistenciaTecnica"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/ic_notifications_active_white_24dp"
        android:drawableLeft="@drawable/ic_notifications_active_white_24dp"
        android:text="Notificaciones" />

    <Button
        android:id="@+id/bDatosUtiles"
        style="@style/b_primary"
        android:layout_below="@id/bNotificaciones"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/ic_phone_white_24dp"
        android:drawableLeft="@drawable/ic_phone_white_24dp"
        android:text="Datos Utiles" />

</RelativeLayout>